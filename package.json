{
	"name": "clean-package",
	"description": "Removes and replaces configuration keys in 'package.json' before creating an NPM package.",
	"version": "2.2.0",
	"author": {
		"name": "roydukkey",
		"email": "contact@changelog.me",
		"url": "http://changelog.me"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://roydukkey@github.com/roydukkey/clean-package.git"
	},
	"homepage": "https://github.com/roydukkey/clean-package#readme",
	"bugs": {
		"url": "https://github.com/roydukkey/clean-package/issues"
	},
	"keywords": [
		"npm",
		"pack",
		"package",
		"package.json",
		"publish",
		"clean"
	],
	"engines": {
		"pnpm": ">=7",
		"node": ">=16.0.0"
	},
	"type": "module",
	"bin": "./bin/main.js",
	"exports": {
		".": "./dist/main.js",
		"./package.json": "./package.json"
	},
	"files": [
		"/bin",
		"/dist",
		"/CHANGELOG.md",
		"/LICENSE",
		"/README.md"
	],
	"dependencies": {
		"dot-prop": "^7.2.0",
		"yargs": "^17.6.2"
	},
	"devDependencies": {
		"@roydukkey/eslint-config": "^2.0.4",
		"@tsconfig/node16-strictest-esm": "^1.0.3",
		"@types/node": "^18.11.9",
		"@types/yargs": "^17.0.13",
		"@typescript-eslint/eslint-plugin": "^5.43.0",
		"@typescript-eslint/parser": "^5.43.0",
		"cspell": "^6.14.3",
		"eslint": "^8.28.0",
		"eslint-plugin-tsdoc": "^0.2.17",
		"npm-run-all": "^4.1.5",
		"rimraf": "^3.0.2",
		"type-fest": "^3.2.0",
		"typescript": "^4.9.3"
	},
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"clean": "rimraf ./dist",
		"lint": "run-s lint:spelling",
		"lint:spelling": "cspell lint --config './.vscode/cspell.json' --no-progress --show-context --relative '**'",
		"build": "run-s clean build:src",
		"build:src": "tsc",
		"self": "node ./bin/main.js"
	},
	"eslintConfig": {
		"root": true,
		"extends": "@roydukkey/eslint-config",
		"env": {
			"node": true
		}
	}
}
